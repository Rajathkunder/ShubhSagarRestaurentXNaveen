<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Page</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css">
</head>
<body class="bg-gray-100 p-6">
  <div class="max-w-4xl mx-auto bg-white p-6 shadow rounded">
    <h1 class="text-2xl font-bold mb-4">Admin Panel</h1>
    
    <!-- Food Items Section -->
    <div class="mb-6">
      <h2 class="text-xl font-semibold mb-2">Manage Food Items</h2>
      <form id="food-form" class="mb-4">
        <input type="text" id="food-name" placeholder="Food Name" class="border p-2 mr-2 rounded" required>
        <input type="number" id="food-price" placeholder="Price" class="border p-2 mr-2 rounded" required>
        <input type="file" id="food-image" class="border p-2 rounded" accept="image/*" required>
        <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded">Add Food</button>
      </form>
      <ul id="food-list" class="list-disc ml-6"></ul>
    </div>

    <!-- Table Reservations Section -->
    <div>
      <h2 class="text-xl font-semibold mb-2">Manage Table Reservations</h2>
      <form id="reservation-form" class="mb-4">
        <input type="text" id="customer-name" placeholder="Customer Name" class="border p-2 mr-2 rounded" required>
        <input type="datetime-local" id="reservation-date" class="border p-2 mr-2 rounded" required>
        <button type="submit" class="bg-green-500 text-white px-4 py-2 rounded">Add Reservation</button>
      </form>
      <ul id="reservation-list" class="list-disc ml-6"></ul>
    </div>
  </div>

  <!-- Firebase App SDK -->
  <script type="module" src="admin.js"></script>
</body>
</html>
